---
import { getLocaleFromUrl, useTranslations } from "../i18n/utils";

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
---

<section id="benefits" class="benefits">
  <div class="container">
    <div class="section-heading">
      <h2>{t("benefits.heading.title")}</h2>
      <p>{t("benefits.heading.description")}</p>
    </div>

    <div class="benefits-container">
      <div class="benefits-image">
        <div class="image-container">
          <div class="placeholder-image"></div>
        </div>
      </div>

      <div class="benefits-list">
        <div class="benefit-item">
          <div class="benefit-number">
            {t("benefits.items.increasedProductivity.number")}
          </div>
          <div class="benefit-content">
            <h3>{t("benefits.items.increasedProductivity.title")}</h3>
            <p>{t("benefits.items.increasedProductivity.description")}</p>
          </div>
        </div>

        <div class="benefit-item">
          <div class="benefit-number">
            {t("benefits.items.reducedCosts.number")}
          </div>
          <div class="benefit-content">
            <h3>{t("benefits.items.reducedCosts.title")}</h3>
            <p>{t("benefits.items.reducedCosts.description")}</p>
          </div>
        </div>

        <div class="benefit-item">
          <div class="benefit-number">
            {t("benefits.items.improvedSustainability.number")}
          </div>
          <div class="benefit-content">
            <h3>{t("benefits.items.improvedSustainability.title")}</h3>
            <p>{t("benefits.items.improvedSustainability.description")}</p>
          </div>
        </div>

        <div class="benefit-item">
          <div class="benefit-number">
            {t("benefits.items.dataDriven.number")}
          </div>
          <div class="benefit-content">
            <h3>{t("benefits.items.dataDriven.title")}</h3>
            <p>{t("benefits.items.dataDriven.description")}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .benefits {
    background-color: var(--color-background);
  }

  .benefits-container {
    display: grid;
    grid-template-columns: 45% 55%;
    gap: 3rem;
    align-items: center;
  }

  .benefits-image {
    position: relative;
  }

  .image-container {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .placeholder-image {
    height: 500px;
    background: linear-gradient(45deg, #2e7d32, #1b5e20);
    position: relative;
  }

  .placeholder-image::before {
    content: "Farm Automation";
    position: absolute;
    bottom: 20px;
    left: 20px;
    color: white;
    font-weight: 600;
    font-size: 1.5rem;
  }

  .benefits-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .benefit-item {
    display: flex;
    gap: 1.5rem;
  }

  .benefit-number {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    color: var(--color-primary);
    opacity: 0.7;
  }

  .benefit-content h3 {
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .benefit-content p {
    color: var(--color-text-light);
  }

  @media (max-width: 1024px) {
    .benefits-container {
      grid-template-columns: 1fr;
    }

    .placeholder-image {
      height: 400px;
    }
  }

  @media (max-width: 768px) {
    .benefit-item {
      flex-direction: column;
      gap: 0.5rem;
    }

    .benefit-number {
      font-size: 2rem;
    }
  }
</style>
