---
import { getLocaleFromUrl, useTranslations } from "../i18n/utils";

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
---

<section id="about" class="about">
  <div class="container">
    <div class="about-grid">
      <div class="about-content">
        <h2>{t("about.heading.title")}</h2>
        <p class="about-intro">{t("about.intro")}</p>

        <div class="about-mission">
          <h3>{t("about.mission.heading")}</h3>
          <p>{t("about.mission.description")}</p>
        </div>

        <div class="about-values">
          <h3>{t("about.values.heading")}</h3>
          <ul>
            <li>
              <strong>{t("about.values.innovation.label")}</strong> – {
                t("about.values.innovation.description")
              }
            </li>
            <li>
              <strong>{t("about.values.sustainability.label")}</strong> – {
                t("about.values.sustainability.description")
              }
            </li>
            <li>
              <strong>{t("about.values.collaboration.label")}</strong> – {
                t("about.values.collaboration.description")
              }
            </li>
            <li>
              <strong>{t("about.values.excellence.label")}</strong> – {
                t("about.values.excellence.description")
              }
            </li>
          </ul>
        </div>
      </div>

      <div class="about-image">
        <div class="team-image-container">
          <div class="placeholder-image"></div>
        </div>
        <div class="stats-container">
          <div class="stat-item">
            <div class="stat-number">
              {t("about.stats.projectsCompleted.number")}
            </div>
            <div class="stat-label">
              {t("about.stats.projectsCompleted.label")}
            </div>
          </div>
          <div class="stat-item">
            <div class="stat-number">{t("about.stats.expertTeam.number")}</div>
            <div class="stat-label">{t("about.stats.expertTeam.label")}</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">
              {t("about.stats.yearsExperience.number")}
            </div>
            <div class="stat-label">
              {t("about.stats.yearsExperience.label")}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    background-color: var(--color-background);
  }

  .about-grid {
    display: grid;
    grid-template-columns: 55% 45%;
    gap: 3rem;
    align-items: center;
  }

  .about-content h2 {
    margin-bottom: 1rem;
    color: var(--color-primary-dark);
  }

  .about-intro {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: var(--color-text);
  }

  .about-mission,
  .about-values {
    margin-bottom: 2rem;
  }

  .about-mission h3,
  .about-values h3 {
    margin-bottom: 0.75rem;
    color: var(--color-primary);
  }

  .about-values ul {
    list-style-type: none;
  }

  .about-values li {
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
  }

  .about-values li::before {
    content: "•";
    color: var(--color-primary);
    font-weight: bold;
    position: absolute;
    left: 0;
  }

  .team-image-container {
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .placeholder-image {
    height: 300px;
    background: linear-gradient(45deg, #2e7d32, #1b5e20);
    position: relative;
  }

  .stats-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    text-align: center;
  }

  .stat-item {
    background-color: var(--color-background-alt);
    padding: 1.5rem 1rem;
    border-radius: 8px;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  @media (max-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .about-image {
      grid-row: 1;
    }
  }

  @media (max-width: 768px) {
    .stats-container {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
