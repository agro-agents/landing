---
import Button from "./Button.astro";
import { getLocaleFromUrl, useTranslations } from "../i18n/utils";

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
---

<section class="hero" id="home">
  <div class="hero-overlay"></div>
  <div class="container hero-container">
    <div class="hero-content">
      <h1>{t("hero.title")}</h1>
      <p>{t("hero.description")}</p>
      <div class="hero-buttons">
        <Button href="#contact" variant="primary">{t("hero.getStarted")}</Button
        >
        <Button href="#features" variant="secondary"
          >{t("hero.exploreSolutions")}</Button
        >
      </div>
    </div>
  </div>
  <div class="hero-wave">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1200 120"
      preserveAspectRatio="none"
    >
      <path
        d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
        fill="#ffffff"></path>
    </svg>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 600px;
    max-height: 800px;
    background-image: url("/agro-agents-landing/images/farm-case-study.jpg");
    background-size: cover;
    background-position: center;
    color: white;
    display: flex;
    align-items: center;
    margin-top: 0;
    padding-top: 0;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(46, 125, 50, 0.7) 100%
    );
    z-index: 1;
  }

  .hero-container {
    position: relative;
    z-index: 2;
  }

  .hero-content {
    max-width: 700px;
    padding-top: 4rem;
  }

  .hero-content h1 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .hero-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    z-index: 2;
  }

  .hero-wave svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 80px;
  }

  @media (max-width: 768px) {
    .hero {
      height: auto;
      padding: 8rem 0 6rem;
    }

    .hero-content h1 {
      font-size: 2.5rem;
    }

    .hero-content p {
      font-size: 1rem;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .hero-wave svg {
      height: 40px;
    }
  }
</style>
