---
// For GitHub Pages, this must be true
export const prerender = true;
const locale = Astro.preferredLocale || Astro.currentLocale;
const basePath = import.meta.env.BASE_URL || '';

// For static sites, we can't use server redirects, so use meta refresh instead
---

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="refresh" content={`0;url=${basePath}/${locale}/`}>
  <title>Redirecting...</title>
</head>
<body>
  <p>Redirecting to <a href={`${basePath}/${locale}/`}>your preferred language</a>...</p>
  <script>
    window.location.href = `${import.meta.env.BASE_URL || ''}/${document.documentElement.lang || '<?php echo $locale ?>'}/`;
  </script>
</body>
</html>
